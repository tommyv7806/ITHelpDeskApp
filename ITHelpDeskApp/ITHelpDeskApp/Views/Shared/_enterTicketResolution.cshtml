<!-- Modal window where users can enter a Resolution Summary when closing a ticket. -->
@model Ticket

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">Close Ticket #@Model.TicketNum</h4>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <p><span class="fieldName">Title: </span>@Model.TicketTitle</p>
            <form asp-controller="Ticket" asp-action="CloseTicket" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="mb-2">
                <label asp-for="ResolutionSummary" class="form-label fieldName">Resolution Summary:</label>
                <textarea asp-for="ResolutionSummary" class="form-control" rows="3"></textarea>
                </div>

                <!-- Hidden fields used for storing values -->
                <input type="hidden" asp-for="TicketId" value="@Model.TicketId" />
                <input type="hidden" asp-for="TicketTitle" value="@Model.TicketTitle" />
                <input type="hidden" asp-for="TicketDescription" value="@Model.TicketDescription" />
                <input type="hidden" asp-for="TicketNum" value="@Model.TicketNum" />
                <input type="hidden" asp-for="AssignedToName" value="@Model.AssignedToName" />
                <input type="hidden" asp-for="CreatedBy" value="@Model.CreatedBy" />
                <input type="hidden" asp-for="CreatedDate" value="@Model.CreatedDate" />
                <input type="hidden" asp-for="Priority" value="@Model.Priority" />
                <input type="hidden" asp-for="Status" value="@Model.Status" />

                <button type="submit" class="btn btn-warning">Close</button>
            </form>
        </div>
    </div>
</div>
