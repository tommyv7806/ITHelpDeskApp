@model Ticket

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Ticket #@Model.TicketNum <span class="float-end badge bg-secondary">@Model.Priority</span></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <p>Title: @Model.TicketTitle</p>
            <p>Description: @Model.TicketDescription</p>
            <p>Created by: @Model.CreatedBy</p>
            <p>Assigned to: @Model.AssignedToName</p>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            @{
                bool isItUser = ViewBag.IsItUser;
                if (isItUser && Model.Status.Equals("Open"))
                {
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ticketResolutionModal">
                        Close Ticket
                    </button>
                }
            }
        </div>
    </div>
</div>

<div class="modal-xl fade" id="ticketResolutionModal" tabindex="-1" aria-hidden="true">
    <partial name="_enterTicketResolution" model="@Model" />
</div>

